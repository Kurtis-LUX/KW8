{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/privacy", "destination": "/index.html" },
      { "source": "/terms", "destination": "/index.html" },
      { "source": "/cookie-policy", "destination": "/index.html" },
      { "source": "/cookie-settings", "destination": "/index.html" },
      { "source": "/api/auth/google-signin", "function": { "functionId": "apiAuthGoogleSignin", "region": "us-central1", "codebase": "default" } },
      { "source": "/api/auth/google-signup", "function": { "functionId": "apiAuthGoogleSignup", "region": "us-central1", "codebase": "default" } },
      { "source": "/api/auth/firebase-exchange", "function": { "functionId": "apiAuthFirebaseExchange", "region": "us-central1", "codebase": "default" } },
      { "source": "/api/auth/verify", "function": { "functionId": "authVerify", "region": "us-central1", "codebase": "default" } }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
