# Environment Configuration for Vercel Deployment

# Application Environment
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/kw8_fitness?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-change-in-production

# API Security
API_SECRET_KEY=your-super-secret-api-key-here-change-in-production

# Frontend URL (for CORS)
FRONTEND_URL=https://kw8-fitness.vercel.app

# Optional: CORS Configuration
CORS_ORIGIN=https://kw8-fitness.vercel.app

# Optional: Rate Limiting
API_RATE_LIMIT=100

# Optional: Session Configuration
SESSION_TIMEOUT=24h
REFRESH_TOKEN_EXPIRY=7d